#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>
#include <sys/types.h>
#include <errno.h>

int main(int argc, char **argv)
{
    char *cmd[] = { "/bin/ls", "-ltr", ".", NULL };

    int status;
    pid_t pid = fork();
    if (pid == 0) {
        if (execv(cmd[0], cmd) < 0) {
            fprintf(stderr, "execv failed: %s\n", strerror(errno));
        }
    }
    else {
        pid_t w = wait(&status);
    }
    printf("Child Process finished\n");

    return 0;
}

