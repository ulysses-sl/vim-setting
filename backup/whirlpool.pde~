class Whirlpool
{
    float x, y, size;
    Whirlpool() {
        size = random(100, 200);
        x = random(0, width);
        y = random(0, height);
    }

    void display() {
        stroke(128,128,128,50);
        fill(128,128,128,50);
        ellipse(x, y, size, size / 2);
    }

    boolean inTheZone(FBox boat) {
        return boat.getX() > x - size && 
               boat.getX() < x + size &&
               boat.getX() > y - size / 2 && 
               boat.getX() < y + size / 2;
    }
}
