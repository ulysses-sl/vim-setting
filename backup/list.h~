#ifndef __LIST_H__
#define __LIST_H__

#include <stdio.h>
#include <stdlib.h>
#include <assert.h>
#include <pthread.h>

struct __list_node {
    int data;
    struct __list_node *next;
};

typedef struct {
    struct __list_node *head;
} list_t;

void list_init(list_t *, pthread_mutex_t *);
void list_clear(list_t *, pthread_mutex_t *);
void list_add(list_t *, int, pthread_mutex_t *);
int list_remove(list_t *, int, pthread_mutex_t *);
void list_print(list_t *, FILE *, pthread_mutex_t *);

#endif // __LIST_H__
